<UserControl x:Class="NatureNetApplication.TagLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="384" d:DesignWidth="173" xmlns:my="http://schemas.microsoft.com/surface/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*" />
            <RowDefinition Height="304*" />
            <RowDefinition Height="51*" />
            <RowDefinition Height="49*" />
        </Grid.RowDefinitions>
        <TextBox Height="40" Name="textBox1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="183" >TAGS</TextBox>
        <my:SurfaceButton Content="ADD NEW TAG" Grid.Row="3" Height="43" HorizontalAlignment="Left" Name="surfaceButton1" VerticalAlignment="Top" Width="183" Click="surfaceButton1_Click" />
        <my:SurfaceListBoxItem Content="ListBoxItem" Grid.Row="1" Height="259" HorizontalAlignment="Left" Name="surfaceListBoxItem1" VerticalAlignment="Top" Width="172" Margin="1,1,0,0" />
        <my:SurfaceButton Content="DROP PIN" Grid.Row="2" Height="38" HorizontalAlignment="Left" Margin="0,6,0,0" Name="surfaceButton2" VerticalAlignment="Top" Width="173" />
    </Grid>
</UserControl>
