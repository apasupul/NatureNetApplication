<UserControl x:Class="VideoStream.UI.Controls.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:ctrl="clr-namespace:VideoStream.UI.Controls"
    xmlns:ani="clr-namespace:SoftwareLab.Animations;assembly=SoftwareLab.Animations"             
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="600" d:DesignWidth="800"
    >
<Grid x:Name="ContentGrid" Background="Transparent">
        <ctrl:BackgroundControl x:Name="backgroundControl" Panel.ZIndex="1"  />
        <ctrl:DragDropScatterView x:Name="scatterContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="99">
            <s:ScatterViewItem Name="sviSearch" Width="500" Height="100" CanScale="False">
                <ctrl:SearchControl Search="Search_Event" AllowDrop="False"  />
            </s:ScatterViewItem>
        </ctrl:DragDropScatterView>
    </Grid>
</UserControl>
